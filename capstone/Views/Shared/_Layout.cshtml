<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Capstone Project</title>
    <link href="~/Content/capstone.css" rel="stylesheet" />
</head>
<body>
    <!--container for body items-->
    <div id="container-body">
        <!--container for top nav bar-->
        <div id="container-top_nav">
            <div id="top_nav">
                <!--left side links-->
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>|</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>|</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <!--right side links-->
                <div style="float:right;">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <!--left picture-->
        <div id="side-graphic-1">
            <img src="~/Content/Cat1.png" />
        </div>
        <!--right picture-->
        <div id="side-graphic-2">
            <img src="~/Content/Cat2.png" />
        </div>
        <!--Content area, where the pages open inside of the container-->
        <div id="content">
            @RenderBody()
            @Scripts.Render("~/bundles/jquery")
            @RenderSection("scripts", required: false)
            <!-- Footer area, for the credits and year -->
            <div id="footer">
                <p>&copy; @DateTime.Now.Year Onshore Capstone Project</p>
            </div>
        </div>
    </div>
</body>
</html>