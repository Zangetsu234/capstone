@{
    ViewBag.Title = "Home Page";
}

<div style="text-align:center;">
    <h1><i>Insert project name</i></h1>
    <h5><i>Insert witty comment</i></h5>
</div>

<div>
    <div class="col-md-4">
        <h2>About (project name)</h2>
        <p><i>Insert brief info about project</i></p>
        <p class="btn btn-default">@Html.ActionLink("Learn more", "About", "Home")</p>
    </div>
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p><i>Inset info about creating an account and character</i></p>
        <p class="btn btn-default">
            @if(Session["ID"] == null)
            {
                @Html.ActionLink("Login", "Login", "Account");
            }
            else
            {
                @Html.ActionLink("Create Character", "CreateCharacter", "Character");
            }
        </p>
    </div>
    <div class="col-md-4">
        <h2>Feedback</h2>
        <p><i>Insert contact info and link to a view page for emailing ideas</i></p>
        <p class="btn btn-default">@Html.ActionLink("Contact Us", "Index", "Mail")</p>
    </div>
</div>