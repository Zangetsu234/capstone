@model BLL.StatsVM

@{
    ViewBag.Title = "Character Stats";
}

<h2>@ViewBag.Title</h2>

<table>
    <thead>
        <tr>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Stats.Count; i++)
        {
            <tr>
                <td><b>Strength:</b></td>
                <td>@Model.Stats[i].Strength</td>
            </tr>
            <tr>
                <td><b>Intelligence:</b></td>
                <td>@Model.Stats[i].Intelligence</td>
            </tr>
            <tr>
                <td><b>Dexterity:</b></td>
                <td>@Model.Stats[i].Dexterity</td>
            </tr>
        }
    </tbody>
</table>