@model BLL.CharactersVM

@{
    ViewBag.Title = "View Characters";
}

<h2>@ViewBag.Title</h2>

<table>
    <thead>
        <tr>
            <th>Your Characters</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Characters.Count; i++)
        {
            <tr>
                <td>
                    @Model.Characters[i].Name:  
                    @Html.ActionLink("View Stats", "ViewStats", "Stat", new { ID = @Model.Characters[i].CharID }, new { }) - 
                    @Html.ActionLink("Start Game", "Index", "Story", new { CharID = @Model.Characters[i].CharID }, new { }) - 
                    @Html.ActionLink("Delete Character", "Delete", "Character", @Model.Characters[i], new { @class="delete", onclick="return confirm('Are you sure you want to delete this character?');"})
                </td>
            </tr>
        }
    </tbody>
</table>